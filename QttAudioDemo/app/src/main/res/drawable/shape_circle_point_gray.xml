<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android"
>
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <solid android:color="#BCBABA" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">
            <!-- solid表示远的填充色 -->
            <solid android:color="#BCBABA" />
            <!-- stroke则代表远的边框线 -->
            <stroke
                android:width="1dp"
                android:color="#BCBABA" />
            <!-- size控制高宽 -->
            <size
                android:height="5dp"
                android:width="5dp" />
        </shape>
    </item>
</layer-list>
